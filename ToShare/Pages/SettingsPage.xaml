<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToShare.Pages.SettingsPage">
    <VerticalStackLayout Margin="20">
        <Label Text="Settings"
               HorizontalOptions="Center"
               FontSize="Large"/>
        <VerticalStackLayout Margin="0,40,0,40"
                             Spacing="20">
            <HorizontalStackLayout Spacing="20">
                <Image Source="user.png"
                       HeightRequest="30"
                       WidthRequest="30"/>
                <Label Text="My Profile"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapProfile"
                                          Tapped="TapProfile_Tapped"/>
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="20">
                <Image Source="about.png"
                       HeightRequest="30"
                       WidthRequest="30"/>
                <Label Text="About"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="20">
                <Image Source="padlock.png"
                       HeightRequest="30"
                       WidthRequest="30"/>
                <Label Text="PrivacySecurity"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="20">
                <Image Source="question.png"
                       HeightRequest="30"
                       WidthRequest="30"/>
                <Label Text="Help and Support"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="20">
                <Image Source="logout.png"
                       HeightRequest="30"
                       WidthRequest="30"/>
                <Label Text="Logout"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapLogout" Tapped="TapLogout_Tapped"/>
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>