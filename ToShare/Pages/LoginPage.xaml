<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToShare.Pages.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout VerticalOptions="Center"
                     Margin="40,0"
                     Spacing="20">
        <Image Source="dotnet_bot"
           HorizontalOptions="Center"
           HeightRequest="150"
           WidthRequest="150"/>
        <Label Text="Welcome back!"
           TextColor="Black"
           FontSize="Large"
           HorizontalOptions="Center"/>
        <Label Text="Please enter your email below to start using app."
           TextColor="Black"
           FontSize="Small"
           HorizontalOptions="Center"/>
        <Entry x:Name="EntEmail"
           Placeholder="Email"/>
        <Entry x:Name="EntPassword"
           Placeholder="Password"
           IsPassword="True"/>
        <Button x:Name="BtnLogin"
            Text="Sign In"
            HeightRequest="50"
            FontSize="Medium"
            BackgroundColor="#1d94ab"
            Clicked="BtnLogin_Clicked"/>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Not a member?"
               FontSize="Medium"
               TextColor="Black"/>
            <Label Text="Join now"
               FontSize="Medium"
               TextColor="#1d94ab"
               Margin="5,0"/>
            <HorizontalStackLayout.GestureRecognizers>
                <TapGestureRecognizer x:Name="TapJoinNow" Tapped="TapJoinNow_Tapped"/>
            </HorizontalStackLayout.GestureRecognizers>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>